{
  "compilerOptions": {
	"baseUrl": ".",
	"paths": { "*": ["types/*"] },
	"target": "ESNext",
	"lib": ["es2015", "es2017", "es2018", "dom"],
	"emitDecoratorMetadata": false,
	"experimentalDecorators": false,
	"stripInternal": true,
	"moduleResolution": "node"
  },
  "include": [
  	"src/**/*",
  	"env/**/*"
  ],
  "exclude": [
    "_trash",
    "dist",
    "docs",
    "node_modules",
    "tmp"
  ]
}